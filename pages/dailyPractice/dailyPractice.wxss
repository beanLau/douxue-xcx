.page-content{
  padding: 0 16rpx;
  font-size: 28rpx;
  position: absolute;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.page-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.question-type{
  color: #2f7af1;
  margin-right: 20rpx;
}
.daily-time{
  color: #333;
}

.question-list {
  height: calc(100% - 80rpx);
  background: #fff;
}
.page-tip{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999;
}