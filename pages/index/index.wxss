page {
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 心灵鸡汤 */
.soul-wrap{
  padding: 30rpx 15rpx;
  display: flex;
  background: #f6f6f6;
  border-radius:10rpx;
}
.soul-left{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.soul-right{
  padding-left: 20rpx;
}
.soul__name{
  font-size: 28rpx;
  line-height: 30rpx;
}


.btn-confirm {
  z-index: 9;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  padding: 0;
  display: inline-block;
  border-radius: 20rpx;
  line-height: 1;
  color: #2f7af1;
  font-size: 32rpx;
  text-align: center;
  background: transparent;
}
.btn-confirm::after{ border: none; }
.soul__ctx{
  margin-top: 20rpx;
  font-size: 30rpx;
}

/* nav */
.nav-scope{
  margin: 30rpx 0 0;
}
.nav-swiper{
height: 210rpx;
}

.nav-swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
   margin-bottom: 0rpx;
}
.nav-swiper .wx-swiper-dot{
  width:30rpx;
  display: inline-flex;
  height: 6rpx;
  margin-left: 0rpx;
  justify-content:space-between;
}
.nav-swiper .wx-swiper-dot::before{
  content: '';
  flex-grow: 1; 
  background: #ddd;
  border-radius: 6rpx
}
.nav{
  font-size: 22rpx;
  color: #333;
}
.nav-item{
  padding:10rpx 0;
  display: inline-block;
  width:25%;
  text-align: center;
}
.nav__image{
  margin-bottom: 15rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.nav-item>text{
  display: block;
  font-size: 30rpx;
}


.recommend-list{

}
.recommend-title{
  color: #2f7af1;
  line-height: 40px;
  padding-left: 20rpx;
  position: relative;
}
.recommend-title::before{
  content: "";
  position: absolute;
  left: 4rpx;
  top: 26rpx;
  width: 8rpx;
  height: 32rpx;
  background: #2f7af1;
}
.recommend-item{
  padding: 16rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.recommend-item:last-of-type{
  border-bottom: none;
}
.recommend--item-title{
  color: #333;
  font-size: 30rpx;
}
.recommend-item-content{
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
}
.recommend-rage{
  display: flex;
  align-items: center;
}
.star-content{
  display: inline-block;
  margin-left: 10rpx;
}