}

.article-item {
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 14rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1rpx solid #f1f1f1;
}

.article-item:last-of-type {
  border: none;
