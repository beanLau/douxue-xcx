.recommend-item {
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.recommend-item:last-of-type {
  border-bottom: none;
}

.recommend--item-title {
  color: #333;
  font-size: 30rpx;
}

.recommend-item-content {
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
}

.recommend-rage {
  display: flex;
  align-items: center;
}

.star-content {
  display: inline-block;
  margin-left: 10rpx;
}

.question-analysis {
  padding: 16rpx;
  border-top: 1rpx solid #f2f2f2;
}

.question-analysis-title {
  position: relative;
  font-size: 30rpx;
  color: #2f7af1;
  padding-left: 20rpx;
}

.question-analysis-title::after {
  content: "";
  position: absolute;
  left: 0;
  top: 4rpx;
  width: 4rpx;
  height: 32rpx;
  background: #2f7af1;
}
