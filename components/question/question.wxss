.question-item{
  color: #333;
  font-size: 28rpx;

}
.question-title{
  color: #111;
  padding: 20rpx 0;
}
.question-subjective textarea{
  padding: 10rpx;
  color: #333;
  border: 1rpx solid #f2f2f2;
  min-height: 100rpx;
}
.question-options{
  display: flex;
  flex-direction: column;
}
.option-item{
  display: flex;
  margin-top: 20rpx;
}
.option-name{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #f2f2f2;
  border-radius: 4rpx;
  flex-shrink: 0;
}
.option-content{
  padding-left: 20rpx;
  flex-grow: 1;
  line-height: 60rpx;
}